          "method": "POST",
          "url": {
            "raw": "http://localhost:4000/api/subscriptions",
            "protocol": "http",
            "host": ["localhost"],
            "port": "4000",
            "path": ["api", "subscriptions"]
          },
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"subscription\": {\n    \"name\": \"Example Feed\",\n    \"url\": \"https://example.com/feed.xml\",\n    \"feed_type\": \"rss\",\n    \"last_synced_at\": \"2024-01-28T12:30:26Z\"\n  }\n}"
          }
        }
      },
