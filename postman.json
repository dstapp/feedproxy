        "request": {
          "method": "GET",
          "url": {
            "raw": "http://localhost:4000/api/subscriptions",
            "protocol": "http",
            "host": ["localhost"],
            "port": "4000",
            "path": ["api", "subscriptions"]
          },
          "header": [
            {
              "key": "Accept",
              "value": "application/json"
            }
          ]
        }
      },
      {
